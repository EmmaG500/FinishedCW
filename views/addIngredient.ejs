<%- include('header.ejs') %>
  <section id="addIngredient" class="container px-4 pb-5 pt-4" style="background-color:#F9F9F9; height:88.5vh;">
    <div class="row">
      <div class="col-12 mt-5">
        <!-- heading -->
        <h3 class='text-center font-weight-light'><strong>ADD INGREDIENT</strong></h3>
        <div class="row mx-auto w-50 bg-white rounded shadow-sm p-3">
          <div class="col mx-auto pb-4">
            <!-- form -->
            <form id="addIngredient" name="addIngredient" action="/addIngredient" method="POST">
              <div class="row mb-3">
                <!-- ingredient name -->
                <div class="col-md-12">
                  <div class="md-form">
                    <label for="formGroupExampleInput">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required/>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <!-- is ingredient a common allergy -->
                <div class="ml-4 form-check">
                  <input class="form-check-input" type="checkbox" value="true" id="allergen" name="allergen">
                  <label class="form-check-label" for="allergen">
                    Allergen
                  </label>
                </div>
              </div>
              <!-- submit -->
              <div class="text-center mx-auto">
                <input id="addIngredientButton" style="background-color:#F5E9E9" type="submit" class="btn btn-block shadow-sm" value="Submit">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('footer.ejs') %>